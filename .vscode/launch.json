    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/MyTypescriptGenerator/bin/Debug/netcoreapp2.0/MyTypescriptGenerator.dll",
            "args": [
                "someassembly.dll",
                "someoutputdir"
            ],
            "cwd": "${workspaceFolder}/src/MyTypescriptGenerator",
            "console": "internalConsole",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}